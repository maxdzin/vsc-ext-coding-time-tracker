{
  "name": "simple-coding-time-tracker",
  "displayName": "Simple Coding Time Tracker",
  "description": "Track and visualize your coding time across projects",
  "version": "0.3.2",
  "publisher": "noorashuvo",
  "license": "MIT",
  "icon": "icon-sctt.png",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Simple Coding Time Tracker",
      "properties": {
        "simpleCodingTimeTracker.saveInterval": {
          "type": "number",
          "default": 5,
          "description": "Interval in seconds to save the current coding session"
        },
        "simpleCodingTimeTracker.inactivityTimeout": {
          "type": "number",
          "default": 300,
          "description": "Time in seconds of inactivity before tracking stops (default: 300 seconds = 5 minutes)"
        }
      }
    },
    "commands": [
      {
        "command": "simpleCodingTimeTracker.showSummary",
        "title": "SCTT: Show Coding Time Summary"
      },
      {
        "command": "simpleCodingTimeTracker.resetTimer",
        "title": "SCTT: Reset Coding Timer for Today"
      },
      {
        "command": "simpleCodingTimeTracker.resetAllTimers",
        "title": "SCTT: Reset All Coding Timers"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "generate-test-data": "node scripts/generate-test-data.js",
    "refresh-extension": "code --uninstall-extension noorashuvo.simple-coding-time-tracker && vsce package && code --install-extension $(npm pack --quiet)"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.25.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {},
  "repository": {
    "type": "git",
    "url": "https://github.com/twentyTwo/vsc-ext-coding-time-tracker.git"
  }
}